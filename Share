window.render3DPlot = (divId, chartData) => {
    const trace = {
        x: chartData.x,
        y: chartData.y,
        z: chartData.z,
        type: 'bar3d', // This line may need to be adjusted if bar3d doesn't exist
        name: '3D Chart'
    };

    const layout = {
        title: chartData.title,
        scene: {
            xaxis: { title: chartData.xLabel },
            yaxis: { title: chartData.yLabel },
            zaxis: { title: chartData.zLabel }
        }
    };

    Plotly.newPlot(divId, [trace], layout);
};
