@using BlazorBootstrap

@if (!dataLoaded)
{
    <PlaceholderContainer Animation="PlaceholderAnimation.Glow">
        <Placeholder Width="PlaceholderWidth.Col12" Class="mb-2" />
        <Placeholder Width="PlaceholderWidth.Col12" Class="mb-2" />
        <Placeholder Width="PlaceholderWidth.Col12" Class="mb-2" />
    </PlaceholderContainer>
}
else
{
    <BarChart @ref="barChart" Width="800" Height="400" />
}

@code {
    private BarChart barChart = default!;
    private ChartData chartData = new();
    private BarChartOptions barChartOptions = new();
    private bool dataLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            chartData.Labels = new List<string> { "Product A", "Product B", "Product C" };
            var dataset = new BarChartDataset
            {
                Label = "Sales",
                Data = new List<double> { 15000, 23000, 18000 },
                BackgroundColor = ColorBuilder.CategoricalSixColors
            };
            chartData.Datasets = new List<IChartDataset> { dataset };
            barChartOptions.Responsive = true;
            await barChart.InitializeAsync(chartData, barChartOptions);
            dataLoaded = true;
            StateHasChanged();
        }
    }
}
