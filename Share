# File: generate_product_trade_chart.py
```python
#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import sys
import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.dates as mdates

def main(inp, outp):
    df = pd.read_csv(inp, parse_dates=['Date'])
    if df.empty:
        fig = plt.figure(figsize=(8, 4))
        ax  = fig.add_subplot(111)
        ax.text(0.5, 0.5, 'No data', ha='center', va='center', fontsize=14)
        ax.axis('off')
        plt.savefig(outp)
        return

    df = df.groupby('Date', as_index=False)['Trades'].sum()

    fig = plt.figure(figsize=(12, 6))
    ax  = fig.add_subplot(111)
    ax.plot(df['Date'], df['Trades'], marker='o', linestyle='-')
    ax.set_ylabel('Product Trades')
    ax.set_title('Product Trades Over Time')

    ax.xaxis.set_major_locator(mdates.MonthLocator(interval=1))
    ax.xaxis.set_major_formatter(mdates.DateFormatter('%Y-%b'))
    fig.autofmt_xdate()

    plt.tight_layout()
    plt.savefig(outp)

if __name__ == '__main__':
    if len(sys.argv) != 3:
        print('Usage: python generate_product_trade_chart.py <csv> <png>', file=sys.stderr)
        sys.exit(1)
    main(sys.argv[1], sys.argv[2])
```

# File: generate_location_deals_product_chart.py
```python
#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import sys
import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.dates as mdates

def main(inp, outp):
    df = pd.read_csv(inp)
    if df.empty:
        fig = plt.figure(figsize=(8, 4))
        ax  = fig.add_subplot(111)
        ax.text(0.5, 0.5, 'No data', ha='center', va='center', fontsize=14)
        ax.axis('off')
        plt.savefig(outp)
        return

    df = df.groupby(['LocCod', 'ProductTypeName'], as_index=False)['TotalDeals'].sum()
    pivot = df.pivot(index='LocCod', columns='ProductTypeName', values='TotalDeals').fillna(0)

    fig = plt.figure(figsize=(12, 6))
    ax  = fig.add_subplot(111)
    pivot.plot(kind='bar', ax=ax)
    ax.set_ylabel('Total Deals')
    ax.set_title('Location Deal Counts by Product')

    ax.legend(title='ProductType')
    plt.xticks(rotation=45, ha='right')
    plt.tight_layout()
    plt.savefig(outp)

if __name__ == '__main__':
    if len(sys.argv) != 3:
        print('Usage: python generate_location_deals_product_chart.py <csv> <png>', file=sys.stderr)
        sys.exit(1)
    main(sys.argv[1], sys.argv[2])
```

# File: generate_deletions_on_murex_chart.py
```python
#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import sys
import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.dates as mdates

def main(inp, outp):
    df = pd.read_csv(inp, parse_dates=['Week'])
    if df.empty:
        fig = plt.figure(figsize=(8, 4))
        ax  = fig.add_subplot(111)
        ax.text(0.5, 0.5, 'No data', ha='center', va='center', fontsize=14)
        ax.axis('off')
        plt.savefig(outp)
        return

    df = df.groupby('Week', as_index=False)['Deals'].sum()

    fig = plt.figure(figsize=(12, 6))
    ax  = fig.add_subplot(111)
    ax.plot(df['Week'], df['Deals'], marker='o', linestyle='-')
